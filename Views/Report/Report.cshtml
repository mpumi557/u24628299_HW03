@model u24628299_Ass3.Models.ReportViewModel
@{
    ViewBag.Title = "Report";
    var searchTerm = ViewBag.SearchTerm as string;
}

<style>
    .report-generation-row {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 20px;
        padding: 10px;
        margin-bottom: 20px;
    }

    .report-input,
    .report-dropdown,
    .generate-report-button {
        margin: 0 10px;
        height: 36px;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #f8f9fa;
    }

    .generate-report-button {
        background-color: #28a745;
        color: white;
        font-weight: 500;
        cursor: pointer;
        border: none;
    }

        .generate-report-button:hover {
            background-color: #218838;
        }

    .saved-reports-section {
        background-color: #e6f0ff; /* light blue background */
        border: 1px solid #003366; /* dark blue outline */
        border-radius: 10px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

        /* Optional: style the header/title inside the section */
        .saved-reports-section h3,
        .saved-reports-section h2 {
            color: #003366;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        /* Optional: if you have buttons in this section */
        .saved-reports-section .btn {
            border-radius: 8px;
        }

        .saved-reports-section .btn-primary {
            background-color: #003366;
            border-color: #003366;
        }

        .saved-reports-section .btn-primary:hover {
             background-color: #002244;
             border-color: #002244;
        }

        .saved-reports-section h3 {
            font-weight: bold;
            margin-bottom: 15px;
        }

        .saved-reports-section ul {
            list-style-type: none;
            padding: 0;
        }

        .saved-reports-section li {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            background-color: white;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 10px;
            transition: background-color 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .saved-reports-section li:hover {
                background-color: #f8f9fa;
            }

    .card {
        background-color: #e6f0ff;
        border-radius: 8px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
        padding: 20px;
    }

    .archive-meta {
        color: #555;
        font-size: 0.95em;
        margin-left: 10px;
    }
</style>

<h2>Stock Items Report</h2>
<div id="stockChartContainer" style="height: 400px; width: 100%; margin-bottom:40px;"></div>

<!-- Report Generation Section -->
<div class="report-generation-row">
    @using (Html.BeginForm("GenerateReport", "Report", FormMethod.Post))
    {
        <input type="text" name="Filename" class="report-input" placeholder="File name" required />

        <select name="FileType" class="report-dropdown" required>
            <option value="">Select file type</option>
            <option value="XLSX">XLSX</option>
            <option value="PDF">PDF</option>
        </select>

        <input type="hidden" name="ChartData" id="chartData" />

        <input type="submit" value="Save Report" class="generate-report-button" onclick="prepareChartData()" />
    }
</div>

<!-- Document Archive Section -->
<div class="saved-reports-section">
    <h3 style="text-align: center">Archived Documents</h3>
    <hr />
    <div class="card">
        <ul>
            @if (Model.SavedReports == null || !Model.SavedReports.Any())
            {
                <li style="text-align: center;">No saved reports found.</li>
            }
            else
            {
                foreach (var report in Model.SavedReports)
                {
                    <li>
                        <div style="flex:1;">
                            <span style="font-weight: bold;">@report.FileName</span>
                            <span class="archive-meta">Type: @report.FileType</span>
                            <span class="archive-meta">Created: @report.DateCreated.ToString("yyyy-MM-dd HH:mm")</span>
                            <span class="archive-meta">Last Saved: @report.SavedOn.ToString("yyyy-MM-dd HH:mm")</span>
                            <!-- Plain Description Display -->
                            @if (!string.IsNullOrWhiteSpace(report.Description))
                            {
                                <div style="margin-top:10px;">
                                    <label style="font-weight:600;">Description:</label>
                                    <div style="background:#f8f9fa; border-radius:4px; padding:8px; margin-top:4px;">
                                        @Html.Raw(report.Description)
                                    </div>
                                </div>
                            }
                        </div>
                        <div>
                            <!-- Download Button -->
                            <a href="@Url.Action("DownloadReport", "Report", new { reportName = report.FileName })"
                               style="margin-right: 10px; padding: 6px 12px; border-radius: 4px; background-color: #28a745; color: white; text-decoration: none; display: inline-block;">
                                Download
                            </a>

                            <!-- Delete Button -->
                            <form action="@Url.Action("DeleteReport", "Report")" method="post" style="display:inline;">
                                <input type="hidden" name="fileName" value="@report.FileName" />
                                <input type="submit" value="Delete"
                                       onclick="return confirm('Are you sure you want to delete this report?');"
                                       style="padding: 6px 12px; border: none; border-radius: 4px; background-color: #dc3545; color: white; cursor: pointer;" />
                            </form>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
    <script type="text/javascript">
        $(function () {
            // --- Stock Items Chart ---
            var stockData = @Html.Raw(ViewBag.StockItemsJson ?? "[]");
            var stockDataPoints = stockData.map(function (item) {
                return { label: item.ProductName, y: item.Quantity };
            });
            var stockChart = new CanvasJS.Chart("stockChartContainer", {
                animationEnabled: true,
                title: { text: "Stock Items Not Sold" },
                axisY: { title: "Quantity in Stock" },
                data: [{
                    type: "column",
                    dataPoints: stockDataPoints
                }]
            });
            stockChart.render();
        });

        // Prepare chart data before form submission
        function prepareChartData() {
            // Capture the stock chart as image
            var stockCanvas = document.querySelector('#stockChartContainer canvas');

            var chartData = {
                stockChart: stockCanvas ? stockCanvas.toDataURL('image/png') : null
            };

            document.getElementById('chartData').value = JSON.stringify(chartData);
        }
    </script>
}