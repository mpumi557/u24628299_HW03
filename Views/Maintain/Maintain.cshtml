@section Styles {
    <style>
        .section-header {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .card {
            margin-bottom: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .card-header {
            background-color: #f8f9fa;
            font-weight: 600;
            padding: 1rem;
        }

        .card-body {
            padding: 1.25rem;
        }

        .card-footer {
            background-color: #e6f0ff; /* soft blue background */
            border-top: 1px solid #003366; /* dark blue border */
            color: #003366; /* blue text */
            font-weight: 500;
        }

        .highlight-panel {
            background-color: #e6f0ff; /* light blue background */
            border: 1px solid #003366; /* dark blue outline */
        }

            .highlight-panel .card-header {
                background-color: #d9e6ff; /* slightly darker header blue */
                color: #003366;
            }

        label {
            font-weight: 500;
            margin-top: 0.5rem;
            margin-bottom: 0.25rem;
            display: block;
        }

        input[readonly] {
            background-color: #f8f9fa;
        }

        .form-control, .form-select {
            margin-bottom: 0.5rem;
        }

        .btn-create {
            margin-bottom: 1rem;
            width: 100%;
        }

        .maintain-actions button {
            margin-right: 0.5rem;
        }

        .detail-box {
            margin-top: 0.5rem;
        }

        /* Product Cards Styling */
        .product-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 0.75rem;
            margin-bottom: 0.75rem;
            transition: box-shadow 0.2s ease;
            background: white;
        }

            .product-card:hover {
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            }

            .product-card .row {
                align-items: center;
            }

        .product-image {
            width: 100%;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
        }

        .product-image-placeholder {
            width: 100%;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f0f0f0;
            border-radius: 6px;
            color: #888;
            font-size: 0.75rem;
        }

        .product-details {
            padding-left: 0.75rem;
        }

        .product-name {
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 0.25rem;
            color: #333;
        }

        .product-info {
            margin-bottom: 0.25rem;
            color: #666;
            font-size: 0.85rem;
            line-height: 1.4;
        }

            .product-info small {
                display: block;
            }

        .product-price {
            font-weight: 700;
            font-size: 1.1rem;
            color: #28a745;
            margin-bottom: 0;
        }

        /* Pagination Styling */
        .paginator {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

            .paginator a,
            .paginator span {
                padding: 0.375rem 0.75rem;
                text-decoration: none;
                color: #007bff;
                border: 1px solid #dee2e6;
                border-radius: 4px;
                background-color: white;
                transition: all 0.2s ease;
            }

                .paginator a:hover:not(.disabled) {
                    background-color: #007bff;
                    color: white;
                    border-color: #007bff;
                }

                .paginator span.active {
                    background-color: #007bff;
                    color: white;
                    border-color: #007bff;
                    font-weight: 600;
                }

                .paginator a.disabled {
                    color: #6c757d;
                    pointer-events: none;
                    opacity: 0.5;
                }

                .paginator span:not(.active) {
                    border: none;
                    background: none;
                    color: #6c757d;
                }


        .container {
            max-width: 1400px;
        }


        .filter-form {
            margin-bottom: 1.5rem;
        }

            .filter-form .form-select {
                margin-bottom: 0.5rem;
            }


        @@media (max-width: 768px) {
            .product-card {
                padding: 0.5rem;
            }

            .product-image,
            .product-image-placeholder {
                height: 60px;
            }

            .product-name {
                font-size: 0.85rem;
            }

            .product-info {
                font-size: 0.75rem;
            }

            .product-price {
                font-size: 1rem;
            }
        }
    </style>
}

@model u24628299_Ass3.Models.MaintainViewModel

@{
    ViewBag.Title = "Maintain";
    var firstStaff = Model.Staffs.FirstOrDefault();
    var firstCustomer = Model.Customers.FirstOrDefault();
    var firstProduct = Model.Products.FirstOrDefault();
}

<div class="container mt-4">
    <div class="row">
        <!-- Staff Section -->
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card highlight-panel">
                <div class="card-header">
                    <div class="section-header">Staff</div>
                    <form method="get" action="@Url.Action("Maintain", "Maintain")" id="staffForm">
                        <input type="hidden" name="customerId" value="@(Model.SelectedCustomer?.customer_id)" />
                        <input type="hidden" name="productId" value="@(Model.SelectedProduct?.product_id)" />
                        <select name="staffId" class="form-select" onchange="this.form.submit()">
                            <option value="">Select staff</option>
                            @foreach (var staff in Model.Staffs)
                            {
                                <option value="@staff.staff_id" @(Model.SelectedStaff?.staff_id == staff.staff_id ? "selected" : "")>
                                    @staff.first_name @staff.last_name
                                </option>
                            }
                        </select>
                    </form>
                </div>
                <div class="card-body">
                    <label>First Name</label>
                    <input type="text" class="form-control" value="@(Model.SelectedStaff?.first_name ?? "")" readonly />
                    <label>Last Name</label>
                    <input type="text" class="form-control" value="@(Model.SelectedStaff?.last_name ?? "")" readonly />
                    <label>Staff ID</label>
                    <input type="text" class="form-control" value="@(Model.SelectedStaff?.staff_id.ToString() ?? "")" readonly />
                    <label>Sold Items</label>
                    <div class="border p-2" style="max-height:200px;overflow:auto;">
                        @{
                            if (Model.SelectedStaff != null && Model.SelectedStaff.orders != null && Model.SelectedStaff.orders.Any(o => o.order_status == 4))
                            {
                                foreach (var order in Model.SelectedStaff.orders.Where(o => o.order_status == 4).OrderBy(o => o.order_date))
                                {
                                    foreach (var item in order.order_items)
                                    {
                                        <div>
                                            Sold @item.products.product_name
                                        </div>
                                    }
                                }
                            }
                            else
                            {
                                <div>No sold items found.</div>
                            }
                        }
                    </div>
                </div>
                <div class="card-footer maintain-actions">
                    @if (Model.SelectedStaff != null)
                    {
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#staffEditModal">Edit</button>
                        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#staffUpdateModal">Update</button>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#staffDeleteModal">Delete</button>
                    }
                </div>
            </div>
        </div>

        <!-- Customer Section -->
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card highlight-panel">
                <div class="card-header">
                    <div class="section-header">Customers</div>
                    <form method="get" action="@Url.Action("Maintain", "Maintain")" id="customerForm">
                        <input type="hidden" name="staffId" value="@(Model.SelectedStaff?.staff_id)" />
                        <input type="hidden" name="productId" value="@(Model.SelectedProduct?.product_id)" />
                        <select name="customerId" class="form-select" onchange="this.form.submit()">
                            <option value="">Select customer</option>
                            @foreach (var customer in Model.Customers)
                            {
                                <option value="@customer.customer_id" @(Model.SelectedCustomer?.customer_id == customer.customer_id ? "selected" : "")>
                                    @customer.first_name @customer.last_name
                                </option>
                            }
                        </select>
                    </form>
                </div>
                <div class="card-body">
                    <label>First Name</label>
                    <input type="text" class="form-control" value="@(Model.SelectedCustomer?.first_name ?? "")" readonly />
                    <label>Last Name</label>
